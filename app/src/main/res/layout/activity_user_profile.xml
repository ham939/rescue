<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C394B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ... (other views remain unchanged) ... -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical ID"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />



        <ImageView
            android:paddingBottom="10dp"
            android:id="@+id/userPhoto"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="User Photo"
            android:src="@drawable/man"
            android:scaleType="centerCrop"
            android:onClick="selectUserPhoto" />

        <ImageView
            android:background="#B53737"
            android:paddingTop="10dp"
            android:layout_height="20dp"
            android:layout_width="match_parent"
            />




        <!-- Name Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/nameEntryEditText"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="2"
                android:hint="---"
                android:textColor="@color/black"
                android:inputType="text"
                android:background="#A7D3E1" />
        </LinearLayout>

        <!-- Phone Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/phoneEntryEditText"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_weight="2"
                android:hint="---"
                android:inputType="phone"
                android:background="#A7D3E1" />
        </LinearLayout>

        <!-- Address Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/addressEntryEditText"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_weight="2"
                android:hint="---"
                android:background="#A7D3E1" />
        </LinearLayout>

        <!-- Language Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Language"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/languageEntryEditText"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_weight="2"
                android:background="#A7D3E1" />
        </LinearLayout>

        <!-- Date of Birth Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOB"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/dobEntryEditText"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="---"
                android:textColor="@color/black"

                android:background="#A7D3E1" />
        </LinearLayout>

        <!-- Weight Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Weight"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/weightEntryEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#A7D3E1"
                android:hint="---"
                android:textColor="@color/black"

                android:padding="2dp" />
        </LinearLayout>

<!--        heightEntryEditText-->
        <!-- Height Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Height"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/heightEntryEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#A7D3E1"
                android:hint="---"
                android:textColor="@color/black"

                android:padding="2dp" />
        </LinearLayout>

        <!-- Blood Type Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Blood Type"
                android:layout_height="wrap_content"

                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/bloodTypeSpinner"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:entries="@array/blood_types"
                />

        </LinearLayout>

        <!-- ... (other views can follow, if any) ... -->

        <TextView
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Organ Donor"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:paddingTop="3dp"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:src="@drawable/plus">

        </ImageView>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Allergies"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:src="@drawable/plus"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Emergency Contact"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:paddingTop="5dp"
            android:layout_width="52dp"
            android:layout_height="43dp"
            android:src="@drawable/plus"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- This View acts as a spacer, pushing the ImageButton to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:paddingTop="10dp"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:src="@drawable/save"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="saveUserDetails"
                android:scaleType="centerInside"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>




